{
    "version": 1,
    "build": {
        "command": "npm run build",
        "cwd": "./",
        "watchPaths": [
            "client/**/*",
            "package.json",
            "vite.config.js"
        ]
    },
    "deploy": {
        "command": "echo 'Deploy completed'",
        "cwd": "./"
    },
    "env": {
        "production": {
            "NODE_VERSION": "18",
            "NPM_FLAGS": "--legacy-peer-deps"
        },
        "preview": {
            "NODE_VERSION": "18",
            "NPM_FLAGS": "--legacy-peer-deps"
        }
    }
}